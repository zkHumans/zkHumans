// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model log {
  id        Int      @id @default(autoincrement())
  type      String // [info,warn,error]
  message   Json
  createdAt DateTime @default(now())
}

model smt {
  id   String @id
  root String

  // relations
  txns smtTxn[]
}

model smtTxn {
  id    Int     @id @default(autoincrement())
  key   String
  value String?
  txn   String // [delete,update]

  // relations
  smt   smt?    @relation(fields: [smtId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  smtId String?
}

model zkapp {
  address   String   @id // Base58 PublicKey of zkapp
  blockInit BigInt   @default(0) // first block height scanned for events
  blockLast BigInt   @default(0) // last block height scanned for events
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  // relations
  stores store[]
}

model store {
  id         String @id
  commitment String // root hash
  meta       Json?

  // relations
  data         storeData[]
  zkapp        zkapp       @relation(fields: [zkappAddress], references: [address])
  zkappAddress String
}

model storeData {
  id          Int     @id @default(autoincrement())
  key         String
  value       String?
  meta        Json?
  blockHeight BigInt?
  globalSlot  BigInt?

  // relations
  store   store  @relation(fields: [storeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  storeId String

  @@unique([key, storeId])
}
