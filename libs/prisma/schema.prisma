// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model log {
  id        Int      @id @default(autoincrement())
  type      String // [info,warn,error]
  message   Json
  createdAt DateTime @default(now())
}

model smt {
  id   String @id
  root String

  // relations
  txns smtTxn[]
}

model smtTxn {
  id    Int     @id @default(autoincrement())
  key   String
  value String?
  txn   String // [delete,update]

  // relations
  smt   smt?    @relation(fields: [smtId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  smtId String?
}
